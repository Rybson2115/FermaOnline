@model IEnumerable<Experiment>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista pomiarow ExperymentName</h2>
        </div>
        <div class="col-6">
            Dodaj pomiar
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Data
                    </th>
                    @foreach (var experiment in Model)
                    {
                        <th>
                            @experiment.Name
                        </th>
                    }

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td width="30%"> Name </td>
                    @foreach (var experiment in Model)
                    {
                        <td width="30%"> @experiment  </td>
                    }
                </tr>

            </tbody>
        </table>
    }
    else
    { <p>Nie przeprowadzono jeszcze pomiarów </p>}
</div>