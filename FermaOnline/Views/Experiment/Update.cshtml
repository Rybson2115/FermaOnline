 


<form method="post" asp-action="Update">
    <input name="id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update experiment</h2>
        </div>
        <div class="row">
            <div class="col-12">
      
                <div class="form-group row">
                    <div class="col-4">
                        <label class="form-label" for="name">Name</label>
                        <input name="name"value="@ViewBag.Name" class="form-control" />
                    </div>

                    <div class="col-4 form-check form-switch">
                        <input class="form-check-input" type="checkbox" value="@ViewBag.Status" name="status" />
                    </div>
                    <div class="col-4">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" name="description" value="@ViewBag.Description" rows="3"> </textarea>
                    </div>
                    <div class="col-4">
                        <label class="form-label" for="shortDescription">Short description</label>
                        <textarea class="form-control" name="shortDescription" value="@ViewBag.ShortDescription" rows="3"></textarea>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label class="form-label " for="files">Files</label>
                            <input type="file" class="form-control"  name="files" multiple  />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-1 row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-primary w-75" value="Update" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Description').summernote({
                height: 250
            });
        });
    </script>
}
