@model Experiment


<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update experiment</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-4 form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="Status" />
                    </div>
                    <div class="col-4">
                        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    </div>
                    <div class="col-4">
                        <label class="form-label" for="postedFiles">Short description</label>
                        <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label class="form-label" for="postedFiles">Upload image </label>
                            <input type="file" name="postedFiles" class="form-control" multiple />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-1 row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-primary w-75" value="Update" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

